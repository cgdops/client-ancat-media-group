---
// Import the raw JSON
import contentRaw from '../data/site-content.json';

// SAFETY CHECK: Ensure content exists, or use an empty object
const content = contentRaw || {};
const contact = content.contact || {};
const meta = content.meta || {};

const { title, description } = Astro.props;

// Construct the Schema safely
// If data is missing, it falls back to empty strings instead of crashing
const schemaData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": meta.title || "Agency Client",
  "description": meta.description || "",
  "telephone": contact.phone || "111-111-1111",  // <--- This was the line causing the error
  "email": contact.email || "contact@email.com",
  "url": Astro.site ? new URL(Astro.site).href : "", 
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "US", 
    "addressRegion": "US"
  }
};
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
        
        {contact.phone && (
           <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
        )}
	</head>
	<body class="bg-white text-gray-900 antialiased">
		<slot />
	</body>
</html>
